<configuration>
    <!-- Console Appender for JSON Logs with logger_name -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <customFields>{"application_name":"customer-management-api"}</customFields>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="CONSOLE"/>
    </root>

    <appender name="JSON_WITHOUT_LOGGER_NAME" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <timestamp/>
                <level/>
                <threadName/>
                <arguments/>
                <mdc/>
                <stackTrace/>
            </providers>
        </encoder>
    </appender>

    <logger name="io.github.aaiezza" level="debug" additivity="false">
        <appender-ref ref="JSON_WITHOUT_LOGGER_NAME"/>
    </logger>
</configuration>
