{
	"info": {
		"name": "acceptance_tests",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Customer",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test('Should return 201 created response', () => {",
							"    pm.response.to.have.status(201)",
							"});",
							"",
							"const json = pm.response.json();",
							"pm.collectionVariables.set('customer_id', json.customer_id);",
							""
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"full_name\": \"John Doe III\",\n    \"preferred_name\": \"Johnny\",\n    \"email_address\": \"johnny+{{$randomBankAccount}}@example.com\",\n    \"phone_number\": \"+12223334444\"\n}   \n",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "http://localhost:8080/customer",
					"protocol": "http",
					"host": [
						"localhost"
					],
					"port": "8080",
					"path": [
						"customer"
					]
				}
			},
			"response": []
		},
		{
			"name": "Customer by Id",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "http://localhost:8080/customer/{{customer_id}}",
					"protocol": "http",
					"host": [
						"localhost"
					],
					"port": "8080",
					"path": [
						"customer",
						"{{customer_id}}"
					]
				}
			},
			"response": []
		}
	],
	"variable": [
		{
			"key": "customer_id",
			"value": ""
		}
	]
}
